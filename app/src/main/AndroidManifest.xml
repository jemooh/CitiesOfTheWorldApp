<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jkirwa.citiesoftheworldapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CitiesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_cities_launch"
        android:usesCleartextTraffic="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_cities_launch_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CitiesOfTheWorldApp">
        <activity
            android:name=".ui.cities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>